@model List<Model.ViewModels.KetQuaXoSoVM>

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "QuanLySoTrung", new {loaiVeSoId=ViewBag.LoaiVeSoId,ngayXoSo=ViewBag.NgayXoSo}, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        <h4>Kết quả ngày @ViewBag.NgayXoSoShow vé số @ViewBag.LoaiVeSo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @for (int i=0;i<Model.Count;i++)
        {
        <div class="form-group">
            @Html.EditorFor(modelItem => Model[i].TenGiai, new { htmlAttributes = new { @value = Model[i].TenGiai, @readonly = "readonly", @style = "background-color: #dee2e6;" } })
            @Html.EditorFor(modelItem => Model[i].SoTrung)
        </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

