@model Model.EFModels.PhieuThu

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Admin</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Phiếu Thu</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">

                    <div class="card-header">
                        <strong class="card-title">Tạo mới phiếu thu</strong>
                    </div>
                    <div class="card-body">
                        <!-- Credit Card -->
                        <div id="pay-invoice">
                            <div class="card-body">
                                <div class="card-title">
                                    <h3 class="text-center">Tạo Phiếu Thu</h3>
                                </div>
                                <hr>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.DaiLyId, "DaiLyId", htmlAttributes: new { @class = "control-label col-md-2" })
                                            @Html.DropDownList("DaiLyId", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.DaiLyId, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.NgayThu, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <input class="form-control" id="NgayThu" name="NgayThu" type="date" value=@ViewBag.DateNow />
                                            @Html.ValidationMessageFor(model => model.NgayThu, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.TienThu, htmlAttributes: new { @class = "control-label col-md-2" })
                                            @Html.EditorFor(model => model.TienThu, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TienThu, "", new { @class = "text-danger" })
                                        </div>


                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-default" />
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

